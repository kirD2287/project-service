generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("PROJECTS_DATABASE_URL")
}

model Task {
  id         Int       @id @default(autoincrement())
  userId     Int
  progressId Int
  name       String
  text       String
  date       DateTime  @default(now())

  user     Users     @relation(fields: [userId], references: [id])
  progress Progress  @relation(fields: [progressId], references: [id])
}

model Progress {
  id        Int       @id @default(autoincrement())
  name      String
  projectId Int
  userId    Int

  project   Project   @relation(fields: [projectId], references: [id])
  user      Users     @relation(fields: [userId], references: [id])
  task      Task[]
}

model Project {
  id       Int        @id @default(autoincrement())
  name     String
  userId   Int

  user     Users      @relation(fields: [userId], references: [id])
  progress Progress[]
}

model Users {
  id       Int       @id
  email    String
  password String

  task     Task[]
  project  Project[]
  progress Progress[]
}

model UsersRoles {
  userId Int
  roleId Int

  @@id([userId, roleId])
}